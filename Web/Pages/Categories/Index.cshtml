@page
@model Web.Pages.Categories.IndexModel
@{
    ViewData["Title"] = "Categories list";
}

<div class="container">
    <div class="row">
        <div class="col-9">
            <h2 class="text-info">Categories list</h2>
        </div>
        <div class="col-3">
            <a class="btn btn-secondary" asp-page="/Categories/Create">Create a new Category</a>
        </div>
    </div>

    <br />
    <br />
    @if (Model.Categories.Count() > 0)
    {
        <table id="tbCategories" class="table table-table-striped table-bordered" style="width:100%;">
            <thead> 
                <tr>
                    <th>@Html.DisplayNameFor(m => m.Categories.FirstOrDefault().Id)</th>
                    <th>@Html.DisplayNameFor(m => m.Categories.FirstOrDefault().Name)</th>
                    <th>@Html.DisplayNameFor(m => m.Categories.FirstOrDefault().CreationDate)</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var category in Model.Categories)
                {
                    <tr>
                        <td>@Html.DisplayFor(m => category.Id)</td>
                        <td>@Html.DisplayFor(m => category.Name)</td>
                        <td>@Html.DisplayFor(m => category.CreationDate)</td>
                        <td>
                            <a class="btn btn-success" asp-page="../Categories/Detail" asp-route-id="@category.Id">Detail</a>
                            <a class="btn btn-warning" asp-page="../Categories/Edit" asp-route-id="@category.Id">Edit</a>
                            <a class="btn btn-danger" asp-page="../Categories/Delete" asp-route-id="@category.Id">Delete</a>
                        </td>
                    </tr>
                }                
            </tbody>
        </table>
    }
    else
    {
        <p>No categories</p>
    }
</div>
